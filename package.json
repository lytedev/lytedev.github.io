{
  "name": "lytedev-site",
  "version": "0.1.0",
  "description": "My personal blog, portfolio, and website at https://lytedev.io",
  "main": "index.js",
  "scripts": {
    "build-styles": "mkdirp static/styles && stylus --use ./node_modules/poststylus --with \"['autoprefixer']\" --compress src/styles/site.styl --out static/styles/site.css",
    "build-scripts": "mkdirp static/scripts && coffee -o ./static/scripts/ --compile ./src/scripts/",
    "build-logo": "coffee ./src/logo/generate-logo.coffee",
    "build": "npm run build-styles & npm run build-scripts & npm run build-logo",
    "watch-styles": "nodemon -e styl -x \"npm run build-styles\"",
    "watch-scripts": "nodemon -e coffee -x \"npm run build-scripts\"",
    "watch-logo": "nodemon -e coffee,pug --watch ./src/logo/ -x \"npm run build-logo\"",
    "watch": "npm run watch-styles & npm run watch-scripts & npm run watch-logo",
    "hugo-build": "hugo",
    "hugo": "hugo serve --buildDrafts",
    "hugo-lan": "hugo serve --bind 0.0.0.0 --buildDrafts",
    "watch-theme": "cd themes/lytedev && npm run watch",
    "build-theme": "cd themes/lytedev && npm run build",
    "build-all": "npm run build-theme && npm run build && npm run hugo-build",
    "watch-all": "npm run watch-theme & npm run watch & npm run hugo",
    "watch-all-lan": "npm run watch-theme & npm run watch & npm run hugo-lan",
    "dev": "npm run watch-all",
    "dev-lan": "npm run watch-all-lan",
    "deploy": "npm run build-all && coffee ./deploy.coffee",
    "deploy-no-build": "coffee ./deploy.coffee",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lytedev/lytedev.github.io.git"
  },
  "keywords": [
    "hugo",
    "blog",
    "site",
    "portfolio",
    "static-site"
  ],
  "author": "daniel@lytedev.io",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lytedev/lytedev.github.io/issues"
  },
  "homepage": "https://github.com/lytedev/lytedev.github.io#readme",
  "dependencies": {
    "autoprefixer": "^6.7.5",
    "coffee-script": "^1.12.4",
    "gh-pages": "^0.12.0",
    "mkdirp": "^0.5.1",
    "node-mkdirp": "^0.0.1",
    "nodemon": "^1.11.0",
    "postcss": "^5.2.15",
    "poststylus": "^0.2.3",
    "pug": "^2.0.0-beta11",
    "pug-cli": "^1.0.0-alpha6",
    "stylus": "^0.54.5"
  }
}
