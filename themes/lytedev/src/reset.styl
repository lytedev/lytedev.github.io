@import url('https://fonts.googleapis.com/css?family=Ubuntu:300,400,700|Ubuntu+Mono:300,400,700')

$fontstack = "Ubuntu", "Lato", "Helvetica Neue", "Calibri Light", Roboto, sans-serif
// $serif-fontstack = "Libre Baskerville", "Baskerville", "Times New Roman", serif
$monospace-fontstack = "Ubuntu Mono", "Iosevka Type", "Monaco", "Consalas", "Droid Sans Mono", monospace

*, *::before, *::after
	box-sizing border-box

