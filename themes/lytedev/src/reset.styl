html
	font-size 62.5%
	background-color #111

body, html
	margin 0
	padding 0
	overflow-x hidden
	// overflow hidden
	background-color $background-color
	color $copy-color

@media print
	*
		color #111
		text-shadow none

body
	font 1.8rem/1.4em $fontstack
	font-weight 300
	color $copy-color
	overflow-y auto
	text-shadow 0px 1px 1px #000

	@media screen and (max-width: $mobile-s-breakpoint)
		font-size 1.6rem

::-moz-selection, ::selection
	background $brand-primary-color !important
	color #fff !important
	text-shadow 0px 0.1em 0.1em rgba(0, 0, 0, 0.50)

small, figcaption
	font-size 1.2rem
	color darken($copy-color, 30%)

a
	color $link-color
	text-decoration none
	padding-bottom 0.2em
	border-bottom dotted 0.1rem currentColor
	transition color 0.2s ease, border 0.2s ease, background-color 0.2s ease

	&:hover
		color $brand-primary-color
		border-color transparent

p
	margin 0.25em 0

label
	text-align left
	display block

button, form input, .btn, .button, textarea
	display inline-box
	display webkit-inline-box
	display inline-flex
	align-items center
	background transparent
	border solid 0.05em $copy-color
	font inherit
	color inherit
	padding 0.4em 0.5em
	margin 0.1em
	border-radius 0.1em
	transition color 0.2s ease, border 0.2s ease, background-color 0.2s ease
	text-shadow inherit

	&.large
		font-size 2.0rem

form input, textarea
	width 100%

button, .button, .btn
	text-align center
	align-content center
	justify-content center
	cursor pointer

	&:hover
		border-color #fff
		background-color #fff
		color $brand-primary-color

svg // ignore some stuff svg doesn't ignore by default
	text-shadow none

h1, h2, h3, h4, h5, h6
	font-weight 300
	text-align center
	line-height 1.5em

hr
	border none
	border-top solid 1px rgba(255, 255, 255, 0.25)
	border-bottom solid 1px rgba(0, 0, 0, 0.25)

figure
	text-align center
	margin 0
	padding 0

code, pre
	font-family $monospace-fontstack
	font-weight 500
