#page-title
	a
		color #fff
		border none
		text-decoration none

#site-content
	.post-description
		p:first-of-type
			margin-top 0

		p:last-of-type
			margin-bottom 0

#page-content
	margin-top 2rem
	padding 0 1rem 2em 1rem

	img, embed, iframe
		max-width 100%

	h1, h2, h3, h4, h5, h6
		text-align left
		margin-top 1.5em

	code
		margin 0 0.25em
		padding 0.25em

	code, pre
		font-size 1.6rem
		color darken($copy-color, 20%)
		border-radius 0.25em
		background-color rgba(255, 255, 255, 0.05)

	pre
		padding 0.25em 0.5em
		max-width 100%
		overflow-x auto

		code
			margin 0
			padding 0
			border-radius 0
			background-color transparent

	a code
		color $link-color

	h1, h2, h3, h4, h5, h6
		text-align left
		margin-top 1.5em

